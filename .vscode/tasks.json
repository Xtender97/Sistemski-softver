{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build project",
            "command": "/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/build/main.o"
            ],
            "options": {
                "cwd": "/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "dependsOn": "Delete old build"
        },
        {
            "type": "process",
            "label": "My build",
            "command": "${workspaceFolder}/build/main.o",
            "dependsOn": "Build project",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Delete old build",
            "command": [
                "touch ${workspaceFolder}/build/main.o",
                " && rm ${workspaceFolder}/build/main.o"
            ]
        },
        {
            "type": "shell",
            "label": "Run build",
            "command": "${workspaceFolder}/build/main.o ${input:param1}"
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "inputs": [
        {
            "id": "param1",
            "description": "Param1:",
            "default": "files/smalltest.s",
            "type": "promptString"
        },
    ]
}